%li{id: dom_id(feed_item)}
  = link_to gravatar_for(feed_item.user, size: 30), feed_item.user

  %span.user= link_to feed_item.user.name, feed_item.user

  %span.content= wrap(feed_item.content)

  %span.timestamp Posted #{time_ago_in_words(feed_item.created_at)} ago

  - if current_user?(feed_item.user)
    = render partial: 'shared/micropost_delete_link', locals: { micropost: feed_item }
